<h1><%= @category.name %></h1>

<%= link_to "New Post", new_region_category_post_path(@region, @category) %>

<% @posts.each do |post| %>
  <div>
    <%= link_to post.title, [post.region, post.category, post] %>
    <%= time_ago_in_words(post.created_at) %>
  </div>
<% end %>

<%= paginate @posts %>
