<h3>Welcome to your dashboard, <%= current_user.email %></h3>

<hr/>

<div>
  <% if current_user.admin? %>
    <%= link_to "New Region", new_region_path %>
    <%= link_to "New Category", new_category_path %>
    <%= link_to "List Categories", categories_path %>
  <% end %>
</div>

<div>
  <%= link_to "List Regions", regions_path %>
</div>

<div>
  <%= render(current_user.posts) %>
</div>

<% if current_user.admin? %>
  <h1>Spam</h1>

  <% @spam.each do |spam| %>
    <%= link_to spam.post.title, [spam.post.region, spam.post.category, spam.post] %>
  <% end %>
<% end %>
